@model wedding.Models.UsersView
@{
        foreach(var error in ViewBag.errors)
            {
                if(@error.Errors.Count > 0)
                {
                    <p>@error.Errors[0].ErrorMessage</p>
                }
            }
 }
<h1>Welcome to the Dojo Bank</h1>
<h1>Login</h1>
<form asp-controller="User" asp-action="Login" method="post">
    <label asp-for="Email"></label>
    <input asp-for="Email"/><br>
    <label asp-for="Password"></label>
    <input asp-for="Password" type="password"/><br>
    <button type="submit">Log in</button>
</form> 

<h2>Don't have an account? Please Register. <a href="/user/registration">To Register page</a></h2>
